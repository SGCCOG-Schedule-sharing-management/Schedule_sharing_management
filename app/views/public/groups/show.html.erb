<h6>グループ詳細画面</h6>
タイトル: <%= @group.title %></br>
内容: <%= @group.content %></br>
本番日: <%= @group.actual_date.present? ? @group.actual_date.strftime('%Y年%m月%d日（%a）') : '未定' %></br>
本番場所: <%= @group.production_location.present? ? @group.production_location : '未定' %></br>

<% current_user_participation_ids = current_user.group_participation_applications.pluck(:group_id) %>

<% group_status = current_user_participation_ids.include?(@group.id) ?
                    current_user.group_participation_applications.find_by(group_id: @group.id).application_status_i18n :
                    '未申請' %>
<% "ステータス：#{group_status}" %></br>

<% if group_status =='承認済み' %>
    ステータス：<%= '参加中' %>
<% else %>
    <%= "ステータス：#{group_status}" %>
<% end %>

<%= link_to '申請状況確認', group_group_participation_application_path(@group.id, @group_status&.id) if @group_status&.id.present? %>

<% if group_status =='承認済み' %>
<% else %>
    <%= link_to 'このグループに参加する', new_group_participation_application_path(group_id: @group.id), class: 'btn btn-primary' %>
<% end %>