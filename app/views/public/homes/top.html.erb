<% if flash[:notice].present? %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:error].present? %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% elsif flash[:success].present? %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>


<div class="container text-center">
  <h3>ようこそ！<br>Legato Schedule へ♪</h3>
  <%= image_tag 'logo.jpg', alt: 'ロゴ', style: 'border-radius: 50%; border: 5px solid #5F9EA0;' %><br>
  グループへ参加し本番までのスケジュールを確認したり、<br>
  活動内容を記録することができます。

  <div class="row justify-content-center">
    <div class="col-md-3">
      <div class='card' style="background-color: #fff; padding: 10px;" onmouseover="this.style.backgroundColor='#f0f0f0'; this.style.cursor='pointer;'" onmouseout="this.style.backgroundColor='#fff';">
        <ul class="nav flex-column">
          <% if current_user.present? %>
            <li class="nav-item"><%= link_to groups_path, class: 'nav-link text-dark' do %>
              <i class="fa-solid fa-people-group" style="font-size: 3em;"></i> <br>グループ一覧
            <% end %>
          <% else %>
            <li class="nav-item"><%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
              <i class="fa-solid fa-people-group" style="font-size: 3em;"></i> <br>グループ一覧
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-3">
      <div class='card' style="background-color: #fff; padding: 10px;" onmouseover="this.style.backgroundColor='#f0f0f0'; this.style.cursor='pointer;'" onmouseout="this.style.backgroundColor='#fff';">
        <ul class="nav flex-column">
          <% if current_user.present? %>
            <li class="nav-item"><%= link_to schedules_path, class: 'nav-link text-dark' do %>
              <i class="fa-regular fa-calendar-days" style="font-size: 3em;"></i> <br>予定一覧
            <% end %>
          <% else %>
            <li class="nav-item"><%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
              <i class="fa-regular fa-calendar-days" style="font-size: 3em;"></i> <br>予定一覧
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
