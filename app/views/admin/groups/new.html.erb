<% if flash[:notice].present? %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:error].present? %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% elsif flash[:success].present? %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>

<div class="container mx-auto">
  <h6 class="text-center">グループ新規登録</h6>
  
  <%= form_with model: @newgroup, url: admin_groups_path do |f| %>
  
  <table class="table">
    <tbody>
      <tr>
        <th class="table-secondary">タイトル</th>
        <td class="table-light"><%= f.text_field :title, class: "form-control" %></td>
      </tr>
      <tr>
        <th class="table-secondary">内容</th>
        <td class="table-light"><%= f.text_area :content, maxlength: 200, :placeholder =>"依頼内容、どんなグループか等を入力", class: "form-control" %></td>
      </tr>
      <tr>
        <th class="table-secondary">本番日</th>
        <td class="table-light"><%= f.date_select :actual_date, { include_blank: true }, { class: 'form-control' } %></td>
      </tr>
      <tr>
        <th class="table-secondary">本番場所</th>
        <td class="table-light"><%= f.text_field :production_location, class: "form-control" %></td>
      </tr>
    </tbody>
  </table>
  
  <div class="text-right"> 
    <%= f.submit '送信', class: "btn btn-success" %>
    <% end %>
  </div>
</div>